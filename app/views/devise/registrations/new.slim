.sign-up.col-md-6
  h2 Sign up

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .row
      .col-md-6
        .form-group
          = f.label :first_name
          = f.text_field :first_name, autofocus: true, class: 'form-control'
      .col-md-6
        .form-group
          = f.label :last_name
          = f.text_field :last_name, autofocus: true, class: 'form-control'

    .form-group
      = f.label :email
      = f.email_field :email, class: 'form-control'

    .form-group.row
      .col-md-4
        = f.label :gender
        = f.select :gender, ['male', 'female'], {}, class: 'form-control'

    .form-group
      = f.label :password
      - if @minimum_password_length
        em #{@minimum_password_length}  characters minimum
      = f.password_field :password, autocomplete: "off", class: 'form-control'

    .form-group
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'

    .form-group
      = f.label :phone_number
      .row
        .col-md-1
          = f.text_field :country_code
        .col-md-6
          = f.text_field :phone_number, class: 'form-control', placeholder: 'Phonenumber here'
    = f.submit "Sign up", class: 'btn btn-default btn-lg'

  .margin20top
    hr
    = render "devise/shared/links"
